<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_input"
        android:paddingLeft="@dimen/space_normal"
        android:paddingTop="@dimen/space_normal"
        android:paddingRight="@dimen/space_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="top|left"
        android:background="@null"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/normal_text_size"
        android:paddingBottom="@dimen/space_normal"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_indicator"
        app:layout_constraintBottom_toBottomOf="@id/et_input"
        app:layout_constraintRight_toRightOf="@id/et_input"
        android:layout_marginRight="@dimen/space_slight"
        android:layout_marginBottom="@dimen/space_slight"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/common_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>