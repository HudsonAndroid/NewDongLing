<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<android.support.constraint.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/white"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_normal_height">

    <TextView
        android:id="@+id/tv_tips"
        android:textColor="@color/common_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/space_large"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_marginBottom="@dimen/space_large"
        android:layout_marginRight="@dimen/space_huge"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/common_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:textColor="@color/common_light_gray"
        android:text="@string/common_cancel"
        app:layout_constraintTop_toTopOf="@id/tv_ok"
        app:layout_constraintBottom_toBottomOf="@id/tv_ok"
        app:layout_constraintRight_toLeftOf="@id/tv_ok"
        android:layout_marginRight="@dimen/space_very_huge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>