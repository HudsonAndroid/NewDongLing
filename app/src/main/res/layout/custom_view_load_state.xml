<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/pb_loading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_tips"
        android:layout_width="@dimen/height_large"
        android:layout_height="@dimen/height_large"/>

    <ImageView
        android:id="@+id/iv_tips"
        android:visibility="gone"
        android:src="@drawable/icon_load_failed"
        app:layout_constraintTop_toTopOf="@id/pb_loading"
        app:layout_constraintBottom_toBottomOf="@id/pb_loading"
        app:layout_constraintLeft_toLeftOf="@id/pb_loading"
        app:layout_constraintRight_toRightOf="@id/pb_loading"
        android:layout_width="@dimen/height_large"
        android:layout_height="@dimen/height_large"/>

    <TextView
        android:id="@+id/tv_tips"
        app:layout_constraintLeft_toLeftOf="@id/pb_loading"
        app:layout_constraintRight_toRightOf="@id/pb_loading"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/height_large_more"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/common_text_color"
        android:text="@string/common_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>