<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/common_light_gray"
        android:gravity="center"
        app:layout_constraintDimensionRatio="1:1"
        android:textSize="@dimen/large_more_text_size"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_normal"/>

    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_number"
        app:layout_constraintRight_toLeftOf="@+id/iv_more"
        app:layout_constraintBottom_toTopOf="@+id/tv_info"
        android:layout_marginTop="@dimen/space_normal"
        android:layout_marginBottom="@dimen/space_little"
        android:layout_marginRight="@dimen/space_normal"
        android:textSize="@dimen/large_text_size"
        android:text="@string/app_name"
        android:textColor="@color/common_text_color"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_info"
        android:textColor="@color/common_light_gray"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        android:layout_marginBottom="@dimen/space_normal"
        android:textSize="@dimen/small_text_size"
        android:maxLines="2"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_more"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/selector_icon_more"
        android:layout_marginRight="@dimen/space_normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/height_slight"
        android:layout_height="@dimen/height_slight"/>

</android.support.constraint.ConstraintLayout>