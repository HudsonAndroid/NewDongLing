<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/sb_progress"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxHeight="10.0dp"
        android:minHeight="10.0dp"
        android:progressDrawable="@drawable/layer_seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/layer_seekbar_thumb"/>

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/sb_progress"
        app:layout_constraintTop_toTopOf="@id/sb_progress"
        app:layout_constraintBottom_toBottomOf="@id/sb_progress"
        android:text="00:00"
        android:layout_marginLeft="@dimen/space_little"
        android:textColor="#42aa0f"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/sb_progress"
        app:layout_constraintTop_toTopOf="@id/sb_progress"
        app:layout_constraintBottom_toBottomOf="@id/sb_progress"
        android:text="00:00"
        android:textColor="#42aa0f"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"/>

</merge>