<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/common_light_white"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/dialog_big_height">

        <TextView
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/space_big"
            android:layout_marginLeft="@dimen/space_big"
            android:textColor="@color/common_text_color"
            android:text="@string/home_mine_create_sheet"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.hudson.donglingmusic.UI.View.InputView
            android:id="@+id/iv_input"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/space_big"
            android:layout_marginRight="@dimen/space_big"
            app:maxCount="10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_big"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_marginBottom="@dimen/space_large"
            android:layout_marginRight="@dimen/space_huge"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/common_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:textColor="@color/common_light_gray"
            android:text="@string/common_cancel"
            app:layout_constraintTop_toTopOf="@id/tv_ok"
            app:layout_constraintBottom_toBottomOf="@id/tv_ok"
            app:layout_constraintRight_toLeftOf="@id/tv_ok"
            android:layout_marginRight="@dimen/space_very_huge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>