<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_tips"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/guide_lyrics_make_tips_step_five"
        android:layout_marginLeft="@dimen/space_huge"
        android:layout_marginBottom="@dimen/margin_very_huge"
        android:textColor="@color/common_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_next"
        app:layout_constraintTop_toBottomOf="@id/tv_tips"
        app:layout_constraintLeft_toRightOf="@id/tv_tips"
        android:layout_marginLeft="@dimen/space_big"
        android:layout_marginTop="@dimen/space_big"
        style="@style/common_guide_next_style"/>

</android.support.constraint.ConstraintLayout>